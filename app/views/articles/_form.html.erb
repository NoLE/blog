<h1> <%= name %> Articulo </h1>
<%= form_for(@article) do |f| %>
      <%   @article.errors.full_messages.each do |message| %>
          <div class="be-red white">
            * <%=  message %>
          </div>
      <% end %>
      <div class="field">
        <%=  f.text_field :title, placeholder: "Titulo", class:"form-control" %>
      </div>
      <div class="field">
       Portada <%=  f.file_field :cover %>
      </div>
      <div class="field">
        <%=  f.text_area :body, id: 'froala-editor', placeholder:"Escribe aqui el Articulo", style:"height: 550px;" %>
      </div>

      <div class="field">
        <label for="">Categorias:</label>
        <% @categories.each do |category| %>
            <div class="field">
              <%= check_box_tag "categories[]", category.id %> <%= category.name %>
            </div>
        <% end %>
      </div>
      <div class="field">
        <%=  f.submit "Guardar", class: "btn white" %>
      </div>
<% end %>

<script>
    $(function() {
        $('textarea#froala-editor').froalaEditor({
            language: 'fa',
            toolbarStickyOffset: 100,
            heightMin: 250,
            heightMax: 500
            /*toolbarButtons: ['undo', 'redo' , '|', 'bold', 'italic', 'underline', 'strikeThrough', 'subscript', 'superscript', 'outdent', 'indent', 'clearFormatting', 'insertTable', 'html'],
            toolbarButtonsXS: ['undo', 'redo' , '-', 'bold', 'italic', 'underline']*/
        })
    });
</script>